

    using System;

public class Person
{
    public Person()
    {
        Console.WriteLine("Enter a name: ");
        Name = Console.ReadLine();
    }

    public Person(string name)
    {
        Name = name;
    }

    public string Name { get; }

    public override string ToString()
    {
        return Name;
    }
}
class TestPerson
{
    static void Main()
    {

        var person1 = new Person();
        Console.WriteLine(person1.Name);


        var person2 = new Person("Good Stuff");
        Console.WriteLine(person2.Name);
        Console.WriteLine("Press any key to exit.");
        Console.ReadLine();
    }
}





/* 
This code prompts the user to input a name in which the code will output the name in the main method using different classes
Slightly edited and got the code from https://docs.microsoft.com/en-us/dotnet/csharp/programming-guide/classes-and-structs/classes */

