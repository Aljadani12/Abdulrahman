using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

//Simple usage of an if/else statement to detect odd and even numbers
//Original code can be found at https://www.sanfoundry.com/csharp-program-check-given-number-even-odd/

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            int i;
            Console.Write("Enter a Number : ");
            i = int.Parse(Console.ReadLine());
            if (i % 2 == 0)
            {
                Console.Write("Entered Number is an Even Number");
                Console.Read();
            }
            else
            {
                Console.Write("Entered Number is an Odd Number");
                Console.Read();
            }
        }
    }
}
//Simple if/else statement to detect if an input is even or odd

/*output
 Enter a Number : 1
Entered Number is an Odd Number1
*/

